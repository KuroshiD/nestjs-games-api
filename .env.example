# =========================
# PostgreSQL Configuration
# =========================
POSTGRES_HOST=postgres-db         # Hostname do container/postgres
POSTGRES_PORT=5432                # Porta padrão do PostgreSQL
POSTGRES_USER=nest_user           # Usuário do banco
POSTGRES_PASSWORD=nest_password   # Senha do banco
POSTGRES_DB=nest_db               # Nome do banco

# =========================
# Redis Configuration
# =========================
REDIS_HOST=redis-cache            # Hostname do container/redis
REDIS_PORT=6379                   # Porta padrão do Redis

# =========================
# Application Configuration
# =========================
APP_PORT=3000                     # Porta da aplicação NestJS
NGINX_PORT=80                     # Porta do Nginx reverso

TYPEORM_CLI=true                  # Usar CLI do TypeORM para migrations

# =========================
# RAWG API Key
# =========================
RAWG_API_KEY=coloque_sua_chave_aqui
# Obtenha uma chave gratuita em https://rawg.io/apidocs

# =========================
# JWT Secrets
# =========================
JWT_ACCESS_SECRET=um_segredo_forte_para_access_token
JWT_REFRESH_SECRET=um_segredo_forte_para_refresh_token